@using BSAWeatherApp.Models

@{
    ViewBag.Title = "Forecast";
    var cityBind = new SelectList(Enum.GetValues(typeof(Cities)));
    var daysPeriodBind = new List<SelectListItem>
    {
        new SelectListItem{ Text = "For today", Value = "1", Selected = true},
        new SelectListItem{ Text = "For three days", Value = "3"},
        new SelectListItem{ Text = "For a week", Value = "7"}
    };
}
<div class="container" id="filterContainer">

    @if (ViewBag.Error)
    {
        <div class="alert alert-danger alert-dismissible" role="alert" id="alertBoxForError">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <strong>Warning!</strong> @ViewBag.ErrorMessage
        </div>
    }

    @using (Html.BeginForm("Forecast", "Weather", FormMethod.Get))
    {
        <div class="row"><h2><i><text id="city"></text></i>Weather forecast</h2></div>
        <div class="col-md-4">
            <div class="form" id="citiesGroup">
                @Html.Label("customCity", "Enter city name:")
                @Html.TextBox("customCity", null, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form" id="customCityGroup">
                @Html.Label("defaultCity", "Select city from list:")
                @Html.DropDownList("defaultCity", cityBind, "--", new { @class = "form-control" })
            </div>
            <div class="form" id="periodsCityGroup">
                @Html.Label("period", "Select period:")
                @Html.DropDownList("period", daysPeriodBind, new { @class = "form-control" })
            </div>
            <input type="submit" id="weatherSbmt" value="Get forecast" class="btn btn-outline-success" />
            <p></p>
        </div>
    }
    @section scripts{
        <script src="~/Scripts/jquery-1.10.2.min.js"></script>
        <script src="~/Scripts/weatherForecast.js"></script>
    }

</div>


