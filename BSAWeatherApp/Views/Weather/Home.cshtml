@model IEnumerable<CityModel>
@{
    ViewBag.Title = "Forecast";
    var cityBind = new List<SelectListItem>();
    foreach (var city in Model)
    {
        cityBind.Add(new SelectListItem
        {
            Value = city.Name,
            Text = city.Name
        });
    }
    var daysPeriodBind = new List<SelectListItem>
    {
        new SelectListItem{ Text = "For three days", Value = "3"},
        new SelectListItem{ Text = "For a week", Value = "7"}
    };
}
@section content{
    <link href="~/Content/select2/select2.min.css" rel="stylesheet" />
}
<div class="row" id="filterContainer">

    @using (Ajax.BeginForm("Forecast", "Weather", new AjaxOptions { UpdateTargetId = "weatherResult", OnBegin = "startAjax()", OnSuccess = "weatherResultAppear()" }))
    {
        <div class="col-md-3">

            <h2>Weather forecast <span class="fa fa-refresh fa-spin" id="loadSpin" aria-hidden="true" style='display:none'></span></h2>
            <div class="form" id="citiesGroup">
                @Html.Label("customCity", "Enter city name:")
                @Html.TextBox("customCity", null, new { @class = "form-control", @required = "required" })
            </div>
            <div class="form" id="customCityGroup">
                @Html.Label("defaultCity", "Select city from list:")
                @Html.DropDownList("defaultCity", cityBind, "--", new { @class = "form-control cityDropDown" })
            </div>
            <div class="form" id="daysCountCityGroup">
                @Html.Label("daysCount", "Select period:")
                @Html.DropDownList("daysCount", daysPeriodBind, new { @class = "form-control" })
            </div>
            <button value="GetForecast" type="submit" id="weatherSbmt" class="btn btn-success">
                Get forecast
                <span class="fa fa-cloud"></span>
            </button>
        </div>
    }
    <div class="col-md-8 col-md-push-1" id="weatherResult">

    </div>
</div>
@section scripts{
    <script src="~/Scripts/select2/select2.min.js"></script>
}

