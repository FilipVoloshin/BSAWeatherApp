<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BSA 2017 Weather Api</title>
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/weathericons")
    @RenderSection("content", required: false)
</head>
<body>
    <div class="container-fluid header-bar">
        <div class="row">
            <nav class="navbar navbar-inverse">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="@Url.Action("Home","Weather")"><i class="wi wi-day-fog"></i>&nbsp; Weather app</a>
                    </div>

                    <div class="collapse navbar-collapse" id="navbar-collapse-3">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="@Url.Action("Home","Weather")">Home</a></li>
                            <li><a href="@Url.Action("Forecast","Weather")">Weather forecast</a></li>
                            <li><a href="@Url.Action("CityManage","Settings")">Settings</a></li>
                            <li class="s-icon">
                                <a href="#" id="addClass"><span class="glyphicon glyphicon-search"></span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div id="qnimate" class="off">
        <div id="search" class="open">
            <button data-widget="remove" id="removeClass" class="close" type="button">×</button>
            @using (Html.BeginForm("Current", "Weather", FormMethod.Post))
            {
                @Html.TextBox("weatherCity", null, new { autocomplete = "off", @required = "required", placeholder = "Enter cities name here", id = "weather-city" })
                <button class="btn btn-lg btn-site" type="submit"><span class="glyphicon glyphicon-search"></span> Search</button>
            }
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    <div class="navbar navbar-default navbar-fixed-bottom" id="navbarBotton">
        <div class="container">
            <p class="navbar-text pull-left">
                All rights reserved. Company information
            </p>
            <div class="navbar-text pull-right">
                <a href='#'><i class="fa fa-facebook fa-3x fa-fw"></i></a>
                <a href='#'><i class="fa fa-instagram fa-3x fa-fw"></i></a>
                <a href='#'><i class="fa fa-twitter fa-3x fa-fw"></i></a>
                <a href='#'><i class="fa fa-linkedin fa-3x fa-fw"></i></a>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/own")
    @RenderSection("scripts", required: false)
</body>
</html>
