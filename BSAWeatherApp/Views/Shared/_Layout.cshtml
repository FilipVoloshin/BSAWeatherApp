<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BSA 2017 Weather Api</title>
    @Styles.Render("~/Content/fontawesome")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/weathericons")
    @RenderSection("content", required: false)
</head>
<body>
    <div class="container-fluid header-bar">
        <div class="row">
            <nav class="navbar navbar-inverse">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-3">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="@Url.Action("Home","Weather")"><i class="wi wi-day-fog"></i>&nbsp; Weather app</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="navbar-collapse-3">
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">Weather now</a></li>
                            <li><a href="#">Weather forecast</a></li>
                            <li><a href="#">Cities management</a></li>
                            <li><a href="#">User's history</a></li>
                            <li class="s-icon">
                                <a href="#" id="addClass"><span class="glyphicon glyphicon-search"></span></a>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container -->
            </nav><!-- /.navbar -->
        </div>
    </div>
    <div id="qnimate" class="off">
        <div id="search" class="open">
            <button data-widget="remove" id="removeClass" class="close" type="button">×</button>
            <form action="" method="" autocomplete="off">
                <input type="text" placeholder="Enter cities name here" value="" name="term" id="term">
                <button class="btn btn-lg btn-site" type="submit"><span class="glyphicon glyphicon-search"></span> Search</button>
            </form>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()
    </div>
    @*TODO: Add footer to the project*@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/own")
    @RenderSection("scripts", required: false)
</body>
</html>
