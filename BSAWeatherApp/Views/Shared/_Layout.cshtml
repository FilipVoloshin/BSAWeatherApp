<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BSA 2017 Weather Api</title>
    <link href="~/Content/tether/tether.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fontawesome")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-light fixed-top" id="navbar">
        <div class="navbar-header">
            <a class="navbar-brand" href=@Url.Action("Filter", "Weather")>
                <img src="~/Content/img/weather_icon.png" width="30" height="30" class="d-inline-block align-top" alt="">
                Weather app
            </a>
        </div>
        @using (Html.BeginForm("WeatherNow", "Weather", FormMethod.Get, new { @class = "navbar-toggler-right form-inline" }))
        {
            <div class="form-group">
                @Html.TextBox("weatherCity", null, new { @class = "form-control", @required = "required", placeholder = "City name" })
            </div>
            <button type="submit" class="btn btn-outline-success">
                Get weather
                <i class="fa fa-sun-o" aria-hidden="true"></i>
            </button>
        }
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; BSA @DateTime.Now.Year Weather Application by Philip Voloshin</p>
        </footer>
    </div>
    <script src="~/Scripts/tether/tether.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
